<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/wall">



    <TextView
        android:id="@+id/chaomung"
        android:layout_width="288dp"
        android:layout_height="57dp"
        android:layout_marginBottom="400dp"
        android:text="CHÀO MỪNG BẠN ĐẾN VỚI BÌNH NGUYÊN VÔ TẬN"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="206dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:hint=" Nhập mật khẩu"
        android:textSize="13sp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/Yeucaumk"
        app:layout_constraintStart_toStartOf="@+id/Yeucaumk"
        app:layout_constraintTop_toBottomOf="@+id/Yeucaumk" />

    <TextView
        android:id="@+id/Yeucaumk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="Vui lòng nhập mật khẩu của bạn"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/chaomung"
        app:layout_constraintStart_toStartOf="@+id/chaomung"
        app:layout_constraintTop_toBottomOf="@+id/chaomung" />

    <TextView
        android:id="@+id/textRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tạo mật khẩu"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/xacNhan" />

    <Button
        android:id="@+id/RegisterPass"
        android:layout_width="106dp"
        android:layout_height="39dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/black"
        android:text="Click here"
        android:textSize="8dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPassword"
        app:layout_constraintStart_toEndOf="@+id/textRegister"
        app:layout_constraintTop_toBottomOf="@+id/xacNhan" />

    <Button
        android:id="@+id/xacNhan"
        android:layout_width="112dp"
        android:layout_height="41dp"
        android:text="Xác nhận"
        android:textSize="11dp"
        android:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>